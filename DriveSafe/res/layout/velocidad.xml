<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#000000">

    <TextView
        android1:id="@+id/lblVelocidad"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentTop="true"
        android1:layout_marginTop="83dp"
        android1:text="Velocidad: "/>
    

    <SeekBar
        android1:id="@+id/barraProgreso"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_below="@+id/lblVelocidad"
        android1:layout_marginTop="68dp"
        android1:max="200" />

    <TextView
        android1:id="@+id/lblDireccion"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_below="@+id/barraProgreso"
        android1:layout_marginTop="50dp"
        android1:text="TextView" />

</RelativeLayout>